---
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
console.log("hello world");
console.log("BlogPage frontmatter:", frontmatter);
---
<Layout title={frontmatter.title}>
<main class="m-auto w-[800px] p-4 text-xl">
  <h1 class="title-gradient my-6 text-center text-6xl font-bold">{frontmatter.title}</h1>
    <article class="blog-content">
      <slot />
    </article>
</main>
</Layout>
<style>
  /* This will only target <p> tags inside .blog-content */
  .blog-content {
    margin: auto;
    max-width: 45em;
  }
  .blog-content :global(p) {
    margin-bottom: 1.5rem;
    line-height: 1.6;
    font-size: 1.25rem;
  }
</style>

