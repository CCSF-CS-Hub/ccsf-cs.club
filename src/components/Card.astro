---
interface Props {
  title: string;
  body: string;
  href: string;
}
const { href, title, body } = Astro.props;
---
<a href={href}>
<div class="card w-full h-48 bg-stone-200 dark:bg-[#23262d] shadow-xl">
  <div class="card-body text-[#23262d] dark:text-white">
    <h2 class="card-title">{title} &rarr;</h2>
    <p>{body}</p>
  </div>
</div>
</a>

<style>
  .card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
