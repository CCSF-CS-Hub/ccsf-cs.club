---
interface Props {
	title: string;
	href: string;
}

const { title, href } = Astro.props;
---
<li class="nav-component">
    <a href={href}>
        <h2>
            {title}
			
        </h2>
    </a> 
</li>

<style>
    .nav-component {
        list-style: none;
        background-color: #23262d;
		background-image: none;
		border-radius: 9px;
		background-position: 100%;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        text-align: center;
		padding: 0.5rem;
		background-size: 400%;
		width: 100%;
    }
    .nav-component > a {
		width: 100%;
		text-decoration: none;
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
    h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
    .nav-component:is(:hover, :focus-within) {
		background: linear-gradient(#e66465, #9198e5);
	}
</style>