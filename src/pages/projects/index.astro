---
import Layout from "../../layouts/Layout.astro";
import Meme from "../../components/Meme.astro";
import Navbar from "../../components/Navbar.astro";
import GoldCard from "../../components/GoldCard.astro";
---

<Layout title="Projects">
  <main>
    <Navbar />
    <h1 class="underline"><a href="/">Projects</a></h1>
    <div class="m-auto w-4/5">
      <GoldCard
        href="/projects/rainbow_walk"
        title="Rainbow Random Walk"
        body="Check out a simple algorithm showcase from this week!"
      />
    </div>
    <br />
    <Meme />
    <p class="mt-4">Look at all the other projects we have here!</p>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
