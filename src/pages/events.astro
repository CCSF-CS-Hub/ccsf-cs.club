---
import Layout from '../layouts/Layout.astro';
import Meme from '../components/Meme.astro';
---

<Layout title="CS Hub Events">
	<main>
  <h1>Events</h1>
  <p>Look at all the events we have here!</p>
	<Meme />
  </main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
